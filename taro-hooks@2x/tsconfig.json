{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "{{#if (includes 'Vue' 'Vue3' s=framework)}}preserve{{else}}react-jsx{{/if}}",{{#if (includes "React" "Preact" s=framework)}}
    "jsxFactory": "React.createElement",{{/if}}{{#if (eq framework "Preact") }}
    "skipLibCheck": true,{{/if}}
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["./src", "./types"],
  "compileOnSave": false
}
